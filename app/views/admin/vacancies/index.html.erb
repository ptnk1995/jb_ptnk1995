<p id="notice"><%= notice %></p>

<h1>Listing Admin Vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Job title</th>
      <th>Job summary</th>
      <th>Job type</th>
      <th>Min sal</th>
      <th>Max sal</th>
      <th>Deal line</th>
      <th>Expected skills</th>
      <th>Locations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_vacancies.each do |admin_vacancy| %>
      <tr>
        <td><%= admin_vacancy.job_title %></td>
        <td><%= admin_vacancy.job_summary %></td>
        <td><%= admin_vacancy.job_type %></td>
        <td><%= admin_vacancy.min_sal %></td>
        <td><%= admin_vacancy.max_sal %></td>
        <td><%= admin_vacancy.deal_line %></td>
        <td><%= admin_vacancy.expected_skills %></td>
        <td><%= admin_vacancy.locations %></td>
        <td><%= link_to 'Show', admin_vacancy %></td>
        <td><%= link_to 'Edit', edit_admin_vacancy_path(admin_vacancy) %></td>
        <td><%= link_to 'Destroy', admin_vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

