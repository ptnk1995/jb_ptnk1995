<p id="notice"><%= notice %></p>

<h1>Listing Histories</h1>

<table>
  <thead>
    <tr>
      <th>History type</th>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Job seeker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.history_type %></td>
        <td><%= history.title %></td>
        <td><%= history.start_time %></td>
        <td><%= history.end_time %></td>
        <td><%= history.job_seeker %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

